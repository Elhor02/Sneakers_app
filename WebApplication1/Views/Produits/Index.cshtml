@model IEnumerable<WebApplication1.Models.Produit>
@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron jumbotron-fluid" style="background-color:#6C1960">
    <div class="container">
        <h1 class="display-4" style="color:white">Welcome to our Sneakers Store!</h1>
        <p class="lead" style="color:white">Find great deals on , fashion.</p>
        <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
            <button style="color:white" class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-9">
            <div class="row">
@foreach (var item in Model)
                {
        
            
                    <div class="col-md-4" style="padding: 20px;">
                        <div class="card" style="width: 18rem;padding: 20px;">
                            <img src="https://via.placeholder.com/150" class="card-img-top" alt="...">
                            <div class="card-body" >
                                <h5 class="card-title">@Html.DisplayFor(modelItem => item._name)</h5>
                                <p class="card-text">$@Html.DisplayFor(modelItem => item._price)</p>
                                <p class="card-text">@Html.DisplayFor(modelItem => item._description)</p>
                                <button type="button" class="btn btn-primary">Add to Cart</button>
                                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                            </div>
                        </div>
                    </div>                                    
 }
            </div>
        </div>
    </div>
</div>